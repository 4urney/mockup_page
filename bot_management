    <div class="tab-content" id="test-sandbox">
      <h2>Test Sandbox</h2>
      <p>Simulate a conversation with RainbowBot:</p>
      <div class="chat-container">
        <!-- Chat Messages -->
        <div class="chat-box">
          <div class="message user-message">
            <p>Hi RainbowBot!</p>
          </div>
